<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <TextView
        android:id="@+id/iTourette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="iTourette"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <ImageButton
                android:id="@+id/focus_tracker"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical"
                android:backgroundTint="#ffffffff"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:contentDescription="Focus Tracker"
                app:srcCompat="@drawable/image"/>
            <ImageButton
                android:id="@+id/games"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical"
                android:backgroundTint="#ffffffff"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:contentDescription="Games"
                app:srcCompat="@drawable/image"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/analysis"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical"
                android:backgroundTint="#ffffffff"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:contentDescription="Analysis"
                app:srcCompat="@drawable/image"/>
            <ImageButton
                android:id="@+id/information"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical"
                android:backgroundTint="#ffffffff"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:contentDescription="Information"
                app:srcCompat="@drawable/image"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

